<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTheme1"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top2c" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:src="@drawable/profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp" />


            <ImageButton
                android:id="@+id/profile_pic_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/plus" />





        </RelativeLayout>

    </RelativeLayout>






    <TextView
        android:id="@+id/users_email"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Your Email ID"
        android:background="@drawable/editfield"
        tools:layout_editor_absoluteY="320dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textColorHint="#302F2F"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editfield">

        <ImageView
            android:id="@+id/editName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="285dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/edit" />

        <TextView
            android:id="@+id/users_name"
            android:layout_width="281dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Your Name"
            android:paddingLeft="80dp"
            android:textColor="@color/black"
            android:textColorHint="#302F2F"
            android:textSize="19dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="320dp" />
    </RelativeLayout>



