<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
    android:background="@color/colorTheme1"
android:layout_height="match_parent"

tools:context=".ArchiveFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2"
            app:civ_border_color="@color/blue"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:text="Done" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/goal_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search for any task...."
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            android:text="Total Tasks: 0"
            android:textColor="@color/colorTheme2"
            android:textSize="15dp" />

    </RelativeLayout>
    <ListView
        android:id="@+id/timeline_listViewDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />










</LinearLayout>
